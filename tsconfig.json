{
  "extends": "@react-native/typescript-config/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["react-native", "jest", "@testing-library/react-native/extend-expect", "node"],
  },
  "include": ["src", "jest.config.ts", "jest.setup.ts", "scripts", "./functional/**/*.ts"]
}
